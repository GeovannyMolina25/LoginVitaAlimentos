@model Crud2.Models.AdmPermisos

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Home/Menu.cshtml";
}

<h2>Nuevo Permiso</h2>
<link rel="stylesheet" href="~/Content/layout.css">
<style>
    .linea {
        display: inline-block;
        width: 160px;
        padding-right: 20px;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.codForm, "Código Formulario", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.codForm, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            @Html.ValidationMessageFor(model => model.codForm, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.carpeta, "Carpeta", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.carpeta, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            @Html.ValidationMessageFor(model => model.carpeta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.vista, "Vista", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.vista, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            @Html.ValidationMessageFor(model => model.vista, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.etiquetaMenu, "Etiqueta", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.etiquetaMenu, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            @Html.ValidationMessageFor(model => model.etiquetaMenu, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.codRol, "Rol", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("codRol", null, htmlAttributes: new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(model => model.codRol, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.codEquipo, "Equipo", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.codEquipo, new SelectList(ViewBag.Equipos, "codEquipo", "nombreEquipo"), "Seleccione un equipo", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.codEquipo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div>
        <div class=" linea">
            <input type="submit" value="Guardar" class="btn btn-success btn-block" id="guardarBtn" />
        </div>
        <div class=" linea">
            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-info btn-block" })
        </div>
    </div>

</div>
}


