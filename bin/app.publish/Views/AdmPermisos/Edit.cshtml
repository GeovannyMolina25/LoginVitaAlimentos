@model Crud2.Models.AdmPermisos

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Home/Menu.cshtml";
}

<h2>Edit</h2>
<link rel="stylesheet" href="~/Content/layout.css">
<style>
    .linea {
        display: inline-block;
        width: 160px;
        padding-right: 20px;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.codRegistro)

    <div class="form-group">
        <label class="control-label col-md-2" style="font-size:18px">Formulario</label>
        <br /><br />
        <div class="col-md-10">
            @Html.EditorFor(model => model.codForm, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.codForm, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" style="font-size:18px">Carpeta</label>
        <br /><br />
        <div class="col-md-10">
            @Html.EditorFor(model => model.carpeta, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.carpeta, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" style="font-size:18px">Vista</label>
        <br /><br />        <div class="col-md-10">
            @Html.EditorFor(model => model.vista, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.vista, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2" style="font-size:18px">Etiqueta</label>
        <br /><br />        <div class="col-md-10">
            @Html.EditorFor(model => model.etiquetaMenu, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.etiquetaMenu, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" style="font-size:18px">Rol</label>
        <br /><br />        <div class="col-md-10">
            @Html.DropDownList("codRol", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.codRol, "", new { @class = "text-danger" })
        </div>
    </div>
    <br /><br />
    <div>
        <div class=" linea">
            <input type="submit" value="Guardar" class="btn btn-success btn-block" id="guardarBtn" />
        </div>
        <div class=" linea">
            @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-info btn-block" })
        </div>
    </div>

</div>
}
