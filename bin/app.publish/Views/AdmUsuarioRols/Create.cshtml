@model Crud2.Models.AdmUsuarioRol

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Home/Menu.cshtml";
}

<h2>Nueva Asignación</h2>
<link rel="stylesheet" href="~/Content/layout.css">
<style>
    .linea {
        display: inline-block;
        width: 160px;
        padding-right: 20px;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.codUsuario, "codUsuario", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("codUsuario", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.codUsuario, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.codRol, "Roles", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                <div class="row">
                    @foreach (var rol in ViewBag.db.AdmRol)
                    {
                        <div class="col-md-4">
                            <label>
                                <input type="checkbox" name="selectedRoles" value="@rol.codRol" />
                                @rol.nombreRol
                            </label>
                        </div>
                    }
                </div>
                @Html.ValidationMessageFor(model => model.codRol, "", new { @class = "text-danger" })
            </div>
        </div>

        <br /><br />

        <div>
            <div class=" linea">
                <input type="submit" value="Guardar" class="btn btn-success btn-block" id="guardarBtn" />
            </div>
            <div class=" linea">
                @Html.ActionLink("Regresar", "Index", null, new { @class = "btn btn-info btn-block" })
            </div>
        </div>
    </div>
}
