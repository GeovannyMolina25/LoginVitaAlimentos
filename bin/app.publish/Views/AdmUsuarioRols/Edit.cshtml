@model Crud2.Models.AdmUsuarioRol

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Home/Menu.cshtml";
}

<h2>Edit</h2>
<link rel="stylesheet" href="~/Content/layout.css">
<style>
    .linea {
        display: inline-block;
        width: 160px;
        padding-right: 20px;
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>AdmUsuarioRol</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.codUsuarioRol)

    <div class="form-group">
        @Html.LabelFor(model => model.codUsuario, "codUsuario", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("codUsuario", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.codUsuario, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.codRol, "codRol", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("codRol", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.codRol, "", new { @class = "text-danger" })
        </div>
    </div>
    <br /><br />
    <div>
        <div class="linea ">
            <input type="submit" value="Guardar" class="btn btn-success btn-block letra " />
        </div>
        <div class="linea">
            @Html.ActionLink("Regresar ", "Index", new { }, new { @class = "btn btn-info btn-block letra" })
        </div>
    </div>
</div>
}
